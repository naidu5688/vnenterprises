@{
    Layout = "~/Views/Shared/_SharedLayout_Admin.cshtml";
   
}


<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    .management-page {
        min-height: 100vh;
        background-color: #17362e; /* greenish background */
        padding: 40px 20px;
        color: white;
    }

    /* Header */
    .management-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .management-header h1 {
            font-size: 32px;
            margin: 0;
        }

        .management-header .btn-add {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            background-color: #d4af37; /* gold button */
            color: white;
            cursor: pointer;
            transition: 0.3s;
        }

            .management-header .btn-add:hover {
                background-color: #c29f2f;
            }

    /* Tabs or sections */
    .management-tabs {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .tab {
        flex: 1;
        background-color: #3b9b7a;
        padding: 15px;
        text-align: center;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
    }

        .tab.active {
            background-color: #235c4e;
            font-weight: bold;
        }

    /* Table */
    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #196351;
        color: white;
        border-radius: 8px;
        overflow: hidden;
        margin-top: 15px;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
    }

    th {
        background-color: #0e3f33;
    }

    tr:nth-child(even) {
        background-color: #28765c;
    }

    tr:hover {
        background-color: #1e5a47;
    }

    .btn-edit, .btn-delete , .btn-add {
        padding: 6px 12px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        color: white;
        margin: 0 2px;
        background: linear-gradient(45deg, #d4af37, #000000); /* gold to black gradient */
        background-size: 200% 200%; /* for smooth animation */
        transition: all 0.5s ease; /* smooth transition */
    }

    .btn-edit , .btn-add {
        background-color: #f0ad4e; /* orange-ish edit */
    }

        .btn-edit:hover , .btn-add:hover {
            background-position: right center; /* gradient moves on hover */
            color: #fff;
            transform: scale(1.05); /* subtle zoom effect */
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

    .btn-delete {
        background-color: #d9534f; /* red delete */
    }

        .btn-delete:hover {
            background-color: #c9302c;
        }

    /* Input inline editing */
    .charge-input {
        width: 80px;
        border-radius: 5px;
        border: none;
        text-align: center;
        padding: 4px;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 9999;
        padding-top: 80px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.5);
    }

    .modal-content {
        background-color: #196351;
        margin: auto;
        padding: 20px;
        border-radius: 10px;
        width: 400px;
        color: white;
        text-align: left;
    }

    .close {
        color: white;
        float: right;
        font-size: 24px;
        cursor: pointer;
    }

    .modal-content input, .modal-content select {
        width: 100%;
        padding: 10px;
        margin: 10px 0 20px 0;
        border-radius: 6px;
        border: none;
    }

    .modal-content .btn-add {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        background-color: #d4af37;
        color: white;
        border: none;
        cursor: pointer;
    }

        .modal-content .btn-add:hover {
            background-color: #c29f2f;
        }
            /* Add modal styles */

    .modal-content label {
        display: block;
        margin-bottom: 5px;
    }

    .modal-content select {
        cursor: pointer;
    }
    #platformfilter {
        height: 28px;
        width: auto;
        background-color: #f0ad4e;
        border-radius: 6px;
        padding: 6px 12px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        margin: 0 2px;
        background: linear-gradient(45deg, #d4af37, #000000); /* gold to black gradient */
        background-size: 200% 200%; /* for smooth animation */
        transition: all 0.5s ease; /* smooth transition */

    }
</style>

<div class="management-page">
    <h1>Platforms & Gateways Management</h1>

    <div class="actions">
        <button class="btn-add" onclick="openModal('platformModal', 'add')">+ Add Platform</button>
        <button class="btn-add" onclick="openModal('gatewayModal', 'add')">+ Add Gateway</button>
    </div>

    <h2>Platforms</h2>
    <table class="data-table" id="platformTable">
        <thead>
            <tr>
                <th>Platform Name</th>
                <th>Default Charge (%)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Platforms)
            {
                <tr data-id="@p.Id">
                    <td>@p.Name</td>
                    <td>@p.Charge</td>
                    <td><span class="status @(p.Status == "Active" ? "active" : "inactive")">@p.Status</span></td>
                    <td>
                        <button class="btn-edit" onclick="openModal('platformModal', 'edit', @p.Id)">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Gateways</h2>
    <label>
        Filter by Platform:
        <select id="platformFilter" onchange="filterGateways()">
            <option value="">All Platforms</option>
            @foreach (var p in Model.Platforms)
            {
                <option value="@p.Name">@p.Name</option>
            }
        </select>
    </label>
    <table class="data-table" id="gatewayTable">
        <thead>
            <tr>
                <th>Gateway Name</th>
                <th>Platform</th>
                <th>Charge (%)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model.Gateways)
            {
                <tr data-platform="@g.PlatformName" data-id="@g.Id">
                    <td>@g.Name</td>
                    <td>@g.PlatformName</td>
                    <td>@g.Charge</td>
                    <td><span class="status @(g.Status == "Active" ? "active" : "inactive")">@g.Status</span></td>
                    <td> <button class="btn-edit" onclick="openModal('gatewayModal', 'edit', @g.Id)">Edit</button> 
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Platform Modal -->
<div id="platformModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal('platformModal')">&times;</span>
        <h3 id="platformModalTitle">Add Platform</h3>
        <label>Platform Name</label>
        <input type="text" id="platformName" placeholder="Platform Name" />
        <label>Default Charge (%)</label>
        <input type="number" id="platformCharge" placeholder="Charge %" />
        <label>Status</label>
        <select id="platformStatus">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
        <button class="btn-add" id="platformSaveBtn" onclick="savePlatform()">Save</button>
    </div>
</div>

<!-- Gateway Modal -->
<div id="gatewayModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal('gatewayModal')">&times;</span>
        <h3 id="gatewayModalTitle">Add Gateway</h3>
        <label>Gateway Name</label>
        <input type="text" id="gatewayName" placeholder="Gateway Name" />
        <label>Select Platform</label>
        <select id="gatewayPlatform">
            <option value="">Select Platform</option>
            @foreach (var p in Model.Platforms)
            {
                <option value="@p.Name">@p.Name</option>
            }
        </select>
        <label>Charge (%)</label>
        <input type="number" id="gatewayCharge" placeholder="Charge %" />
        <label>Status</label>
        <select id="gatewayStatus">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>

        <button class="btn-add" id="gatewaySaveBtn" onclick="saveGateway()">Save</button>
    </div>
</div>

<script>
    let editMode = false;
    let editType = ''; // 'platform' or 'gateway'
    let editRow = null;

    // Open modal for Add/Edit
    function openModal(modalId, mode, id = null) {
        editMode = mode === 'edit';
        editType = modalId === 'platformModal' ? 'platform' : 'gateway';
        const modal = document.getElementById(modalId);
        modal.style.display = 'block';

        if(editMode) {
            if(editType === 'platform') {
                document.getElementById('platformModalTitle').innerText = 'Edit Platform';
                editRow = document.querySelector(`#platformTable tbody tr[data-id='${id}']`);
                document.getElementById('platformName').value = editRow.cells[0].innerText;
                document.getElementById('platformCharge').value = editRow.cells[1].innerText;
                document.getElementById('platformStatus').value = editRow.cells[2].innerText;
            } else {
                document.getElementById('gatewayModalTitle').innerText = 'Edit Gateway';
                editRow = document.querySelector(`#gatewayTable tbody tr[data-id='${id}']`);
                document.getElementById('gatewayName').value = editRow.cells[0].innerText;
                document.getElementById('gatewayPlatform').value = editRow.cells[1].innerText;
                document.getElementById('gatewayCharge').value = editRow.cells[2].innerText;
                document.getElementById('gatewayStatus').value = editRow.cells[3].innerText;
            }
        } else {
            // Reset inputs
            if(editType === 'platform') {
                document.getElementById('platformModalTitle').innerText = 'Add Platform';
                document.getElementById('platformName').value = '';
                document.getElementById('platformCharge').value = '';
            } else {
                document.getElementById('gatewayModalTitle').innerText = 'Add Gateway';
                document.getElementById('gatewayName').value = '';
                document.getElementById('gatewayCharge').value = '';
                document.getElementById('gatewayPlatform').value = '';
            }
        }
    }

    // Close modal
    function closeModal(id) {
        document.getElementById(id).style.display = 'none';
    }

    // Save Platform
    function savePlatform() {
        const name = document.getElementById('platformName').value;
        const charge = document.getElementById('platformCharge').value;
        if(!name || !charge) { alert('Enter all fields'); return; }

            const status = document.getElementById('platformStatus').value;

        if(editMode && editRow) {
            editRow.cells[0].innerText = name;
            editRow.cells[1].innerText = charge;
            editRow.cells[2].innerText = status;
        } else {
            const table = document.getElementById('platformTable').getElementsByTagName('tbody')[0];
            const row = table.insertRow();
            row.setAttribute('data-id', Date.now());
            row.innerHTML = `
                <td>${name}</td>
                <td>${charge}</td>
                <td>${status}</td>
                <td>
                    <button class="btn-edit" onclick="openModal('platformModal','edit',${Date.now()})">Edit</button>
                </td>`;
        }

        closeModal('platformModal');
    }

    // Save Gateway
    function saveGateway() {
        const name = document.getElementById('gatewayName').value;
        const platform = document.getElementById('gatewayPlatform').value;
        const charge = document.getElementById('gatewayCharge').value;
        if(!name || !platform || !charge) { alert('Enter all fields'); return; }

            const status = document.getElementById('gatewayStatus').value;

    if(editMode && editRow) {
        editRow.cells[0].innerText = name;
        editRow.cells[1].innerText = platform;
        editRow.cells[2].innerText = charge;
        editRow.cells[3].innerText = status;
        editRow.setAttribute('data-platform', platform);
    } else {
        const table = document.getElementById('gatewayTable').getElementsByTagName('tbody')[0];
        const row = table.insertRow();
        row.setAttribute('data-id', Date.now());
        row.setAttribute('data-platform', platform);
        row.innerHTML = `
            <td>${name}</td>
            <td>${platform}</td>
            <td>${charge}</td>
            <td>${status}</td>
            <td>
                <button class="btn-edit" onclick="openModal('gatewayModal','edit',${Date.now()})">Edit</button>
            </td>`;
    }


        closeModal('gatewayModal');
    }

    // Filter Gateways
    function filterGateways() {
        const selected = document.getElementById('platformFilter').value;
        const rows = document.getElementById('gatewayTable').getElementsByTagName('tbody')[0].rows;
        for(let i=0;i<rows.length;i++) {
            const row = rows[i];
            if(!selected || row.getAttribute('data-platform') === selected) row.style.display = '';
            else row.style.display = 'none';
        }
    }
</script>

