                        onclick="document.getElementById('@d.Item1').click()">
                    Upload
                </button>

                <button class="btn-danger"
                        onclick="deleteImage('@d.Item1')">
                    Delete
                </button>

                <span style="color:#d4af37">@d.Item2</span>
            </div>
        }
    </div>
    <br>
   
    <div class="flex-header">
